{
	"name": "saidnews",
	"version": "1.0.0",
	"description": "a project website for studying and learning",
	"main": "index.js",
	"scripts": {
		"dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && (trap 'npm run services:stop' INT TERM HUP; next dev)",
		"test": "npm run services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
		"posttest": "npm run services:stop",
		"test:watch": "jest --watchAll --runInBand --verbose",
		"services:up": "docker compose -f infra/compose.yaml --env-file .env.development up -d",
		"services:stop": "docker compose -f infra/compose.yaml --env-file .env.development stop",
		"services:down": "docker compose -f infra/compose.yaml --env-file .env.development down",
		"services:wait:database": "node infra/scripts/wait-for-postgres.ts",
		"migrations:create": "node-pg-migrate -m infra/migrations create",
		"migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
		"migrations:down": "node-pg-migrate -m infra/migrations down",
		"lint:prettier:check": "prettier --check .",
		"lint:prettier:fix": "prettier --write .",
		"lint:eslint:check": "eslint .",
		"seed:admin": "tsx infra/scripts/seeders/seed-admin.ts",
		"seed:user": "tsx infra/scripts/seeders/seed-user.ts",
		"seed:users": "npm run seed:admin && npm run seed:user",
		"seed:team": "tsx infra/scripts/seeders/seed-teamMembers.ts",
		"seed:articles": "tsx infra/scripts/seeders/seed-articles.ts",
		"seed:all": "npm run seed:users && npm run seed:team && npm run seed:articles",
		"prepare": "husky",
		"commit": "cz"
	},
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@vercel/blob": "^2.2.0",
		"async-retry": "1.3.3",
		"bcryptjs": "3.0.3",
		"commitizen": "^4.2.4",
		"dotenv": "17.2.3",
		"dotenv-expand": "12.0.3",
		"eslint-config-prettier": "10.1.8",
		"next": "^16.1.6",
		"node-pg-migrate": "^8.0.4",
		"nodemailer": "7.0.12",
		"pg": "8.16.3",
		"react": "19.2.3",
		"react-dom": "19.2.3",
		"react-icons": "5.5.0",
		"swr": "^2.3.8",
		"uuid": "13.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "20.2.0",
		"@commitlint/config-conventional": "20.2.0",
		"@faker-js/faker": "10.2.0",
		"@next/eslint-plugin-next": "^16.1.1",
		"@tailwindcss/postcss": "4",
		"@types/jest": "30.0.0",
		"@types/node": "25.0.3",
		"@types/react": "19.2.7",
		"concurrently": "9.2.1",
		"cz-conventional-changelog": "3.3.0",
		"eslint": "9.39.2",
		"eslint-config-next": "16.1.1",
		"eslint-plugin-jest": "29.11.0",
		"globals": "^16.5.0",
		"husky": "9.1.7",
		"jest": "30.2.0",
		"prettier": "3.7.4",
		"set-cookie-parser": "^2.7.2",
		"tailwindcss": "4",
		"ts-jest": "29.4.6",
		"tsx": "^4.21.0",
		"typescript": "5.9.3"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
